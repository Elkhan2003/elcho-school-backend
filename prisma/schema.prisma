// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  role            UserRole @default(USER)
  auth            String
  login           String   @unique
  password        String
  isActive        Boolean  @default(true)
  photo           String?
  phone           String?
  isPhoneVerified Boolean  @default(false)
  traffic         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  Order           Order[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}

model Error {
  id        Int      @id @default(autoincrement())
  code      String
  details   String
  hint      String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  userId      Int
  product     String
  price       BigInt
  quantity    BigInt
  totalAmount BigInt
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId])
}

model Product {
  id          Int      @id @default(autoincrement())
  author      String
  title       String
  price       String
  description String
  category    String
  image       String
  rate        String
  count       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}
